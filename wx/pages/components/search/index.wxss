/* pages/components/search/index.wxss */
.search-component {
  display: block;
  width: 100%;
  background-color: #ffffff;
  padding: 8px 14px;
  box-sizing: border-box;
}
.search-box {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border: 1px solid #f2f2f2;
  padding: 5px 10px;
  border-radius: 15px;
}

.search-box .icon-search {
  display: inline-block;
  height: 16px;
  width: 16px;
  margin-right: 6px;
}

.search-box input {
  flex: 1;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  height: 20px;
  line-height: 20px;
}